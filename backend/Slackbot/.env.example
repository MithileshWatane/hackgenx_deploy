# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_APP_TOKEN=xapp-your-app-token

# Gemini Configuration
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-1.5-flash

# Database Configuration (Neon serverless PostgreSQL)
# Get your free connection string from: https://neon.tech
DATABASE_URL=postgresql://neondb_owner:your-password@ep-xxxx.us-east-2.aws.neon.tech/neondb?sslmode=require

# Pinecone Configuration
# Create a free index at: https://app.pinecone.io
# Index settings: dimensions=768, metric=cosine
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX=doctor-ai-memory

# Security
ENCRYPTION_KEY=your-32-character-encryption-key
PHI_ENCRYPTION_ENABLED=true

# Environment
NODE_ENV=development
LOG_LEVEL=info
